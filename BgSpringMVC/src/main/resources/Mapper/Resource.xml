<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bg.dao.ResourceDao">
    <select id="addResource" parameterType="Resource">
        insert into resource (resourcename,resourceurl,presourceid,resourcetype) values(#{resourcename},#{resourceurl},#{presourceid},#{resourcetype})
    </select>
    <select id="findList" resultType="com.bg.model.ResourceTable" parameterType="map">
        select c.* from (select a.resourceid,a.resourceurl,a.resourcename,b.resourcename presourcename,a.presourceid,
        case when a.resourcetype=0 then '菜单资源' else '功能资源' end resourcetype
        from resource a
        left join resource b
        on b.RESOURCEID=a.PRESOURCEID) c
        <where>
            <if test="presourceid!=null and presourceid!=''">
                c.presourceid =#{presourceid}
            </if>
        </where>
        limit #{firstPage},#{rows}

    </select>
    <select id="findtotal" resultType="java.lang.Long" parameterType="map">
        select count(*) from resource
        <where>
            <if test="presourceid!=null and presourceid!=''">
                presourceid =#{presourceid}
            </if>
        </where>
    </select>
    <delete id="deleteResource" parameterType="java.lang.String">
        DELETE from resource where resourceid=#{id}
    </delete>
    <select id="findById" parameterType="java.lang.String" resultType="com.bg.model.Resource">
        select * from resource where resourceid=#{id}
    </select>
    <update id="updateResource" parameterType="Resource">
        UPDATE resource
        <trim prefix="set" suffixOverrides=",">
            <if test="resourcename!=null and resourcename!=''">resourcename=#{resourcename},</if>
            <if test="resourceurl!=null and resourceurl!=''">resourceurl=#{resourceurl},</if>
            <if test="presourceid!=null and presourceid!=''">presourceid=#{presourceid},</if>
            <if test="resourcetype!=null and resourcetype!=''">resourcetype=#{resourcetype},</if>
        </trim>
        WHERE resourceid=#{resourceid}
    </update>
    <select id="getAllResource" resultType="com.bg.model.Resource">
        select resourceid,RESOURCENAME from resource where RESOURCETYPE=0
    </select>
    <select id="findPreById"  resultType="com.bg.model.Resource" parameterType="java.lang.String">
        select RESOURCEID,resourcename from resource where RESOURCEID=(select PRESOURCEID from resource  where RESOURCEID=#{id})
    </select>
    <select id="getAllResources" resultType="com.bg.model.Resource">
        select * from resource
    </select>
    <select id="getCheckResource" parameterType="java.lang.String" resultType="com.bg.model.RoleResource">
        select * from roleresource
        <if test="_parameter != null and _parameter!=''">
           where roleid =#{roleid}
        </if>
    </select>
    <select id="getResourceByUser" parameterType="java.lang.String" resultType="com.bg.model.Resource">
        select a.resourceid,a.resourcename,a.presourceid,a.RESOURCEURL
            from resource a,userrole b,roleresource c
            where a.resourceid=c.resourceid and b.roleid=c.roleid
                    and b.username=#{username}
    </select>
</mapper>