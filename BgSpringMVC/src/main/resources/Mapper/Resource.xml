<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bg.dao.ResourceDao">
    <select id="addRole" parameterType="Role">
        insert into role (rolename,createtime,updatetime,createuser) values(#{rolename},#{createtime},#{updatetime},#{createuser})
    </select>
    <select id="findList" resultType="com.bg.model.Role" parameterType="map">
        select * from resource
        <where>
            <if test="resouceid!=null and resouceid!=''">
                resouceid =#{resouceid}
            </if>
        </where>
        limit
        #{firstPage},
        #{rows}

    </select>
    <select id="findtotal" resultType="java.lang.Long" parameterType="map">
        select count(*) from resource
        <where>
            <if test="resouceid!=null and resouceid!=''">
                resouceid =#{resouceid}
            </if>
        </where>
    </select>
    <delete id="deleteResource" parameterType="java.lang.String">
        DELETE from role where id=#{id}
    </delete>
    <select id="findById" parameterType="java.lang.String" resultType="com.bg.model.Role">
        select * from role where id=#{id}
    </select>
    <update id="updateResource" parameterType="Role">
        UPDATE role
        <trim prefix="set" suffixOverrides=",">
            <if test="rolename!=null and rolename!=''">rolename=#{rolename},</if>
            <if test="updatetime!=null and updatetime!=''">updatetime=#{updatetime},</if>
        </trim>
        WHERE id=#{id}
    </update>
    <select id="getAllResource" resultType="com.bg.model.Resource">
        select resourceid,RESOURCENAME from resource where RESOURCETYPE=0
    </select>
    <select id="findPreById"  resultType="com.bg.model.Resource" parameterType="java.lang.String">
        select RESOURCEID,resourename where RESOURCEID=(select PRESOURCEID where RESOURCEID=#{id})
    </select>
</mapper>